    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "montserrat";
        color: #fff;
      }
      
      html,
      body {
        height: 100%;
        width: 100%;
        background-color: black;
      }

      *::selection {
        background-color: #fff;
        color: #95c11e;
      }
      
      body::-webkit-scrollbar {
        display: block;
        width: 8px;
        background: #95c11e;
      }
      body::-webkit-scrollbar-thumb {
        background-color: #fff;
        border-radius: 50px;
      }

      body {
        overflow-x: hidden;
      }
      
      #nav {
    height: 130px;
    width: 100%;
    background-color: black;
    display: flex;
    align-items: center;
    padding: 0 120px;
    gap: 50px;
    justify-content: flex-start;
    z-index: 999;
    color: white;
  }
  #nav a{
    text-decoration: none;
    color: white;
  }
  #nav h4 {
    text-transform: uppercase;
    font-weight: 500;
    cursor: pointer;
    font-size: 1.15vw;
  }
  .link{
    display: flex;
    gap: 26px;
